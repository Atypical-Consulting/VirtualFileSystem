@* Single Toast Notification *@

<div class="@ToastClass" role="alert">
    <div class="flex-shrink-0">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="@IconPath" />
        </svg>
    </div>
    <div class="flex-1 text-sm font-medium">
        @Message.Message
    </div>
    <button type="button"
            class="flex-shrink-0 ml-2 p-1 rounded-md hover:bg-black/5 transition-colors"
            @onclick="() => OnDismiss.InvokeAsync(Message.Id)"
            aria-label="Dismiss">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
    </button>
</div>

@code {
    [Parameter, EditorRequired] public ToastMessage Message { get; set; } = default!;
    [Parameter] public EventCallback<Guid> OnDismiss { get; set; }

    private string ToastClass => Message.Severity switch
    {
        ToastSeverity.Success => "toast-success",
        ToastSeverity.Error => "toast-error",
        ToastSeverity.Warning => "toast-warning",
        _ => "toast-info"
    };

    private string IconPath => Message.Severity switch
    {
        ToastSeverity.Success => "M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z",
        ToastSeverity.Error => "M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z",
        ToastSeverity.Warning => "M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z",
        _ => "m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"
    };
}

@* List View File/Folder Row *@
@inject VFSStateService StateService
@inject UndoRedoService UndoRedoService

<div class="@RowClass"
     tabindex="0"
     data-file-item
     data-path="@Path"
     @onclick="HandleClick"
     @ondblclick="HandleDoubleClick"
     @oncontextmenu="HandleContextMenu"
     @oncontextmenu:preventDefault="true"
     @onkeydown="HandleKeyDown">

    @* Checkbox *@
    <div class="flex-shrink-0 w-8">
        <input type="checkbox"
               class="checkbox"
               checked="@IsSelected"
               @onclick:stopPropagation="true"
               @onchange="HandleCheckboxChange" />
    </div>

    @* Icon *@
    <div class="flex-shrink-0 w-8">
        <FileIcon IsDirectory="@IsDirectory" FileName="@Name" />
    </div>

    @* Name *@
    <div class="flex-1 min-w-0 flex items-center gap-2">
        <span class="truncate text-sm font-medium text-gray-900">@Name</span>
        @if (IsStarred)
        {
            <svg class="w-4 h-4 text-yellow-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" />
            </svg>
        }
    </div>

    @* Modified Date *@
    <div class="hidden sm:block w-32 text-right">
        <span class="text-sm text-gray-500">@ModifiedText</span>
    </div>

    @* Size *@
    <div class="hidden md:block w-24 text-right">
        <span class="text-sm text-gray-500">@SizeText</span>
    </div>

    @* Star Button *@
    <div class="flex-shrink-0 w-8">
        <button class="p-1 rounded-md @(IsStarred ? "text-yellow-500" : "text-gray-400 hover:text-yellow-500")"
                @onclick="HandleStarClick"
                @onclick:stopPropagation="true">
            <svg class="w-4 h-4" fill="@(IsStarred ? "currentColor" : "none")" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
            </svg>
        </button>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public string Path { get; set; } = "";
    [Parameter, EditorRequired] public string Name { get; set; } = "";
    [Parameter] public bool IsDirectory { get; set; }
    [Parameter] public string? ModifiedText { get; set; }
    [Parameter] public string? SizeText { get; set; }
    [Parameter] public EventCallback<string> OnSelect { get; set; }
    [Parameter] public EventCallback<string> OnOpen { get; set; }
    [Parameter] public EventCallback<(string Path, double X, double Y)> OnContextMenu { get; set; }

    private bool IsSelected => StateService.IsItemSelected(Path);
    private bool IsStarred => StateService.IsStarred(Path);
    private bool IsHighlighted => UndoRedoService.IsRecentlyAffected(Path);

    private string RowClass
    {
        get
        {
            var baseClass = "flex items-center gap-3 px-4 py-2 cursor-pointer transition-colors duration-150 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cloud-500";
            var selectedClass = IsSelected
                ? "bg-cloud-50"
                : "hover:bg-gray-50";
            var highlightClass = IsHighlighted ? "file-item-highlight" : "";
            return $"{baseClass} {selectedClass} {highlightClass}";
        }
    }

    private void HandleClick(MouseEventArgs e)
    {
        OnSelect.InvokeAsync(Path);
    }

    private void HandleDoubleClick(MouseEventArgs e)
    {
        OnOpen.InvokeAsync(Path);
    }

    private void HandleContextMenu(MouseEventArgs e)
    {
        OnContextMenu.InvokeAsync((Path, e.ClientX, e.ClientY));
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            OnOpen.InvokeAsync(Path);
        }
    }

    private void HandleCheckboxChange(ChangeEventArgs e)
    {
        StateService.ToggleItemSelection(Path);
    }

    private void HandleStarClick()
    {
        StateService.ToggleStar(Path);
    }
}

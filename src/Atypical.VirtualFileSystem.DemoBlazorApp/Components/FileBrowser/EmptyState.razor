@* Empty State Component *@

<div class="empty-state">
    <svg class="empty-state-icon" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="@Icon" />
    </svg>
    <h3 class="empty-state-title">@Title</h3>
    <p class="empty-state-description">@Description</p>
    @if (Action != null)
    {
        <div class="mt-4">
            @Action
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "No items";
    [Parameter] public string Description { get; set; } = "This folder is empty";
    [Parameter] public string Icon { get; set; } = "M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z";
    [Parameter] public RenderFragment? Action { get; set; }
}

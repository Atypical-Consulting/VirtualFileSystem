@* File Preview/Details Panel (Right Sidebar) *@
@inject VFSStateService StateService
@inject IVirtualFileSystem VFS
@inject ToastService Toast
@inject RecentFilesService RecentFiles
@inject RecycleBinService RecycleBin
@inject NavigationManager Navigation
@implements IDisposable

<div class="h-full flex flex-col">
    @if (StateService.SelectedItems.Count == 0)
    {
        @* No Selection *@
        <div class="flex-1 flex items-center justify-center p-6">
            <div class="text-center">
                <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                </svg>
                <p class="text-gray-500 text-sm">Select a file or folder to see details</p>
            </div>
        </div>
    }
    else if (StateService.SelectedItems.Count == 1)
    {
        var selectedPath = StateService.SelectedItems.First();
        var isDirectory = VFS.DirectoryExists(selectedPath);
        var isFile = VFS.FileExists(selectedPath);

        @* Header *@
        <div class="p-4 border-b border-gray-200">
            <div class="flex items-center gap-3">
                <FileIcon IsDirectory="@isDirectory" FileName="@GetFileName(selectedPath)" Size="lg" />
                <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-gray-900 truncate">@GetFileName(selectedPath)</h3>
                    <p class="text-sm text-gray-500">@(isDirectory ? "Folder" : GetFileType(selectedPath))</p>
                </div>
            </div>
        </div>

        @* Actions *@
        <div class="p-4 border-b border-gray-200 flex gap-2">
            @if (isFile)
            {
                <Button Variant="secondary" Size="sm" OnClick="() => OpenFile(selectedPath)"
                        Icon="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25">
                    Open
                </Button>
            }
            <Button Variant="ghost" Size="sm" OnClick="() => ToggleStar(selectedPath)"
                    Icon="@(StateService.IsStarred(selectedPath) ? StarFilledIcon : StarIcon)">
                @(StateService.IsStarred(selectedPath) ? "Starred" : "Star")
            </Button>
            <Button Variant="ghost" Size="sm" OnClick="() => DeleteItem(selectedPath)"
                    Icon="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0">
                Delete
            </Button>
        </div>

        @* Details *@
        <div class="flex-1 overflow-y-auto p-4">
            <h4 class="text-sm font-medium text-gray-900 mb-3">Details</h4>
            <dl class="space-y-3">
                <div>
                    <dt class="text-xs text-gray-500">Path</dt>
                    <dd class="text-sm text-gray-900 font-mono break-all">@selectedPath</dd>
                </div>

                @if (isFile && VFS.TryGetFile(selectedPath, out var fileNode))
                {
                    <div>
                        <dt class="text-xs text-gray-500">Size</dt>
                        <dd class="text-sm text-gray-900">@FormatSize(fileNode.Content?.Length ?? 0)</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Created</dt>
                        <dd class="text-sm text-gray-900">@fileNode.CreationTime.ToString("g")</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Modified</dt>
                        <dd class="text-sm text-gray-900">@fileNode.LastWriteTime.ToString("g")</dd>
                    </div>

                    @* Text Preview *@
                    @if (!string.IsNullOrEmpty(fileNode.Content) && fileNode.Content.Length < 5000)
                    {
                        <div class="pt-4">
                            <h4 class="text-sm font-medium text-gray-900 mb-2">Preview</h4>
                            <div class="bg-gray-50 rounded-lg p-3 text-xs font-mono text-gray-700 max-h-48 overflow-auto">
                                <pre class="whitespace-pre-wrap">@fileNode.Content</pre>
                            </div>
                        </div>
                    }
                }
                else if (isDirectory && VFS.TryGetDirectory(selectedPath, out var dirNode))
                {
                    <div>
                        <dt class="text-xs text-gray-500">Files</dt>
                        <dd class="text-sm text-gray-900">@dirNode.Files.Count()</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Folders</dt>
                        <dd class="text-sm text-gray-900">@dirNode.Directories.Count()</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Created</dt>
                        <dd class="text-sm text-gray-900">@dirNode.CreationTime.ToString("g")</dd>
                    </div>
                }
            </dl>
        </div>
    }
    else
    {
        @* Multiple Selection *@
        <div class="p-4">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 bg-cloud-100 rounded-lg flex items-center justify-center">
                    <span class="text-cloud-600 font-semibold">@StateService.SelectedItems.Count</span>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-900">@StateService.SelectedItems.Count items selected</h3>
                    <p class="text-sm text-gray-500">Multiple selection</p>
                </div>
            </div>

            <div class="flex gap-2">
                <Button Variant="ghost" Size="sm" OnClick="DeleteSelected"
                        Icon="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0">
                    Delete All
                </Button>
                <Button Variant="ghost" Size="sm" OnClick="() => StateService.ClearSelection()">
                    Clear Selection
                </Button>
            </div>
        </div>
    }
</div>

@code {
    private const string StarIcon = "M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z";
    private const string StarFilledIcon = "M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z";

    protected override void OnInitialized()
    {
        StateService.OnSelectionChanged += StateHasChanged;
        StateService.OnDataChanged += StateHasChanged;
    }

    private string GetFileName(string path)
    {
        return System.IO.Path.GetFileName(path.TrimEnd('/')) ?? path;
    }

    private string GetFileType(string path)
    {
        var ext = System.IO.Path.GetExtension(path);
        if (string.IsNullOrEmpty(ext)) return "File";
        return ext.ToUpperInvariant().TrimStart('.') + " file";
    }

    private string FormatSize(int bytes)
    {
        if (bytes < 1024) return $"{bytes} bytes";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }

    private void OpenFile(string path)
    {
        RecentFiles.RecordAccess(path, false);
        Navigation.NavigateTo($"/file?path={Uri.EscapeDataString(path)}");
    }

    private void ToggleStar(string path)
    {
        StateService.ToggleStar(path);
        Toast.ShowSuccess(StateService.IsStarred(path) ? "Added to starred" : "Removed from starred");
    }

    private void DeleteItem(string path)
    {
        RecycleBin.MoveToRecycleBin(VFS, path);
        StateService.ClearSelection();
        StateService.NotifyDataChanged();
        Toast.ShowSuccess("Moved to Recycle Bin");
    }

    private void DeleteSelected()
    {
        var items = StateService.SelectedItems.ToList();
        foreach (var path in items)
        {
            RecycleBin.MoveToRecycleBin(VFS, path);
        }
        StateService.ClearSelection();
        StateService.NotifyDataChanged();
        Toast.ShowSuccess($"Moved {items.Count} items to Recycle Bin");
    }

    public void Dispose()
    {
        StateService.OnSelectionChanged -= StateHasChanged;
        StateService.OnDataChanged -= StateHasChanged;
    }
}

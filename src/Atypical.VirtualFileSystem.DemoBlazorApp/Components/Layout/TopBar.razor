@* CloudDrive Top Navigation Bar *@
@inject VFSStateService StateService
@inject NavigationManager Navigation
@inject UndoRedoService UndoRedoService
@inject GitHubAuthService GitHubAuthService
@implements IDisposable

<header class="h-topbar bg-white border-b border-gray-200 flex items-center px-4 gap-4">
    @* Logo and Brand *@
    <div class="flex items-center gap-2 min-w-[200px]">
        <button class="btn-icon lg:hidden" @onclick="() => OnToggleSidebar.InvokeAsync()">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
        </button>
        <a href="/" class="flex items-center gap-2 text-cloud-600 hover:text-cloud-700">
            <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 0 0 4.5 4.5H18a3.75 3.75 0 0 0 1.332-7.257 3 3 0 0 0-3.758-3.848 5.25 5.25 0 0 0-10.233 2.33A4.502 4.502 0 0 0 2.25 15Z" />
            </svg>
            <span class="text-xl font-semibold hidden sm:inline">CloudDrive</span>
        </a>
    </div>

    @* Search Bar *@
    <div class="flex-1 max-w-xl">
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                </svg>
            </div>
            <input type="text"
                   class="block w-full pl-10 pr-3 py-2 text-sm bg-gray-100 border border-transparent rounded-lg focus:bg-white focus:border-cloud-500 focus:ring-1 focus:ring-cloud-500 transition-colors"
                   placeholder="Search files and folders..."
                   @bind="SearchQuery"
                   @bind:event="oninput"
                   @onkeydown="HandleSearchKeyDown" />
        </div>
    </div>

    @* Right Actions *@
    <div class="flex items-center gap-2">
        @* GitHub Import Button *@
        <button class="btn-icon hidden md:flex"
                @onclick="() => OnToggleGitHubImport.InvokeAsync()"
                title="Import from GitHub">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5a17.92 17.92 0 0 1-8.716-4.247m0 0A8.966 8.966 0 0 1 3 12c0-1.97.633-3.791 1.708-5.273" />
            </svg>
        </button>

        @* GitHub Settings Button *@
        <button class="btn-icon hidden md:flex relative"
                @onclick="() => OnToggleGitHubSettings.InvokeAsync()"
                title="@(GitHubAuthService.IsAuthenticated ? $"GitHub: {GitHubAuthService.CurrentCredentials.Username}" : "GitHub Settings")">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.564 9.564 0 0112 6.844c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.579.688.481C19.137 20.167 22 16.42 22 12c0-5.523-4.477-10-10-10z" />
            </svg>
            @if (GitHubAuthService.IsAuthenticated)
            {
                <span class="absolute -top-0.5 -right-0.5 w-2.5 h-2.5 bg-green-500 rounded-full border-2 border-white"></span>
            }
        </button>

        @* View Toggle *@
        <div class="hidden md:flex items-center border border-gray-200 rounded-lg p-0.5">
            <button class="@(StateService.ViewMode == ViewMode.Grid ? "bg-gray-100" : "") p-1.5 rounded-md transition-colors"
                    @onclick="() => StateService.ViewMode = ViewMode.Grid"
                    title="Grid view">
                <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
                </svg>
            </button>
            <button class="@(StateService.ViewMode == ViewMode.List ? "bg-gray-100" : "") p-1.5 rounded-md transition-colors"
                    @onclick="() => StateService.ViewMode = ViewMode.List"
                    title="List view">
                <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                </svg>
            </button>
        </div>

        @* Undo/Redo Buttons *@
        <UndoRedoButtons />

        @* History Toggle *@
        <button class="btn-icon hidden md:flex relative"
                @onclick="() => OnToggleHistory.InvokeAsync()"
                title="History">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            @if (UndoRedoService.UndoCount > 0)
            {
                <span class="absolute -top-1 -right-1 bg-cloud-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">
                    @(UndoRedoService.UndoCount > 9 ? "9+" : UndoRedoService.UndoCount)
                </span>
            }
        </button>

        @* Preview Panel Toggle *@
        <button class="btn-icon hidden md:flex @(StateService.ShowPreviewPanel ? "bg-gray-100" : "")"
                @onclick="() => StateService.ShowPreviewPanel = !StateService.ShowPreviewPanel"
                title="Toggle details panel">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
        </button>

        @* User Avatar *@
        <button class="w-8 h-8 rounded-full bg-cloud-600 text-white flex items-center justify-center text-sm font-medium">
            U
        </button>
    </div>
</header>

@code {
    [Parameter] public EventCallback OnToggleSidebar { get; set; }
    [Parameter] public EventCallback OnToggleHistory { get; set; }
    [Parameter] public EventCallback OnToggleGitHubImport { get; set; }
    [Parameter] public EventCallback OnToggleGitHubSettings { get; set; }

    private string SearchQuery { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        UndoRedoService.OnHistoryChanged += StateHasChanged;
        GitHubAuthService.OnCredentialsChanged += StateHasChanged;
        await GitHubAuthService.InitializeAsync();
    }

    private void HandleSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(SearchQuery))
        {
            Navigation.NavigateTo($"/search?q={Uri.EscapeDataString(SearchQuery)}");
        }
    }

    public void Dispose()
    {
        UndoRedoService.OnHistoryChanged -= StateHasChanged;
        GitHubAuthService.OnCredentialsChanged -= StateHasChanged;
    }
}

@* CloudDrive Left Sidebar Navigation *@
@inject NavigationManager Navigation
@inject IVirtualFileSystem VFS
@inject RecycleBinService RecycleBin
@inject VFSStateService StateService
@implements IDisposable

<aside class="@SidebarClass">
    <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto custom-scrollbar">
        @* Main Navigation *@
        @NavItem("/", "M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25", "My Files")

        @NavItem("/recent", "M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z", "Recent")

        @NavItem("/starred", "M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z", "Starred")

        <div class="pt-4 pb-2">
            <span class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">System</span>
        </div>

        @NavItem("/bin", "M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0", "Recycle Bin", RecycleBin.Count)

        @NavItem("/search", "M21 21l-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z", "Search")
    </nav>

    @* Storage Meter *@
    <div class="p-4 border-t border-gray-200">
        <div class="flex items-center justify-between text-sm mb-2">
            <span class="text-gray-600">Storage</span>
            <span class="text-gray-900 font-medium">@FileCount files, @DirectoryCount folders</span>
        </div>
        <div class="storage-meter">
            <div class="storage-meter-fill" style="width: @StoragePercentage%"></div>
        </div>
        <p class="text-xs text-gray-500 mt-1">
            @TotalItems items in your CloudDrive
        </p>
    </div>
</aside>

@code {
    [Parameter] public bool IsOpen { get; set; } = true;
    [Parameter] public EventCallback OnClose { get; set; }

    private int FileCount => VFS.Files.Count();
    private int DirectoryCount => VFS.Directories.Count();
    private int TotalItems => FileCount + DirectoryCount;
    private int StoragePercentage => Math.Min(100, TotalItems * 2); // Simulated

    private string SidebarClass => IsOpen
        ? "w-sidebar bg-nav-bg border-r border-nav-border flex flex-col h-full"
        : "w-sidebar bg-nav-bg border-r border-nav-border flex flex-col h-full hidden lg:flex";

    protected override void OnInitialized()
    {
        RecycleBin.OnChange += StateHasChanged;
        StateService.OnDataChanged += StateHasChanged;
    }

    public void Dispose()
    {
        RecycleBin.OnChange -= StateHasChanged;
        StateService.OnDataChanged -= StateHasChanged;
    }
}

@* NavItem Sub-component *@
@code {
    private RenderFragment NavItem(string Href, string Icon, string Label, int? BadgeCount = null) => __builder =>
    {
        var isActive = Navigation.Uri.TrimEnd('/').EndsWith(Href.TrimEnd('/')) ||
                       (Href == "/" && Navigation.Uri.EndsWith("/"));

        <a href="@Href"
           class="@(isActive ? "nav-item-active" : "nav-item")">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="@Icon" />
            </svg>
            <span class="flex-1">@Label</span>
            @if (BadgeCount.HasValue && BadgeCount.Value > 0)
            {
                <span class="bg-gray-200 text-gray-700 text-xs font-medium px-2 py-0.5 rounded-full">
                    @BadgeCount
                </span>
            }
        </a>
    };
}
